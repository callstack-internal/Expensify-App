{
    "plugins": ["import", "typescript"],
    "categories": {
        "correctness": "off",
        "suspicious": "off",
        "pedantic": "off",
        "style": "off",
        "nursery": "off",
        "restriction": "off"
    },
    "rules": {
        "import/no-cycle": "warn",
        "typescript/no-non-null-assertion": "error",
        "typescript/consistent-type-definitions": ["error", "type"],
        "typescript/no-import-type-side-effects": "error"
    }
}
